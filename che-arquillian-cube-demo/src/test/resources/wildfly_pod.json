{
	"apiVersion":"v1",
	"kind": "Pod",
	"metadata": {
		"name": "wildfly",
		"labels": {
			"name": "wildfly"
		}
	},
	"spec": {
		"containers": [{
			"name": "wildfly",
			"image": "docker.io/aslakknutsen/wildfly-demo",
			"readinessProbe": {
			     "httpGet": {
			         "path": "/",
			         "port": 8080
			     },
			     "initialDelaySeconds": 1,
			     "timeoutSeconds": 1
			}
		}]
	}
}
